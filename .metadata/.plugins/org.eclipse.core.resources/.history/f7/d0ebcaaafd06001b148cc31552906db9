package programmersTest;

import java.util.Stack;

public class Level2 {
	public static void main(String[] args) {
		
		String s = "(())()";
		
		System.out.println(new Solution().solution(s));
	}
}


class Solution {
    boolean solution(String s) {
        
        int count = 0;
        
        for(int i = 0 ; i < s.length() ; i++) {
        	if(s.charAt(i) == '(') {
        		count++;
        	}
        }
        
        if(count == s.length()/2) {
        	return true;
        }else {
        	return false;
        }
    }
}