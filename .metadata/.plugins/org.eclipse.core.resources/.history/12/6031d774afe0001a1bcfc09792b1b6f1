import java.util.Scanner;

public class Q1011 {
	
	static int t, x, y;
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		t = sc.nextInt();
		
		while(t-- > 0) {		
		
			x = sc.nextInt();
			y = sc.nextInt();
			
			int l = y - x - 2;
			int count = 2;
			
			if(l%2 == 0) {
				count+=l/2;
			}
			else {
				count = count + l/2 + l%2;
			}
			
			System.out.println(count);
		}
		
		sc.close();		
	}
	
	
}
